#%RAML 0.8
---
title: Travel Agency API
version: v1
protocols: [HTTP/HTTPS]
baseUri: /
/flight-offers:
    post:
        description: Create a Flight Offer
        body:
            application/json:
                example: |
                    {
                        "price": "38.99",
                        "flightOrigin": "londonGBR",
                        "flightDestination": "parisFRA",
                        "airline": "EasyJet",
                        "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                    }
        responses:
            200:
                description: Flight Offer Successfully Created
                body:
                    application/json:
                        example: |
                            {
                                "id": "e74fc76d-3868-4fdd-9df5-04946f46e44f",
                                "price": "38.99",
                                "flightOrigin": "londonGBR",
                                "flightDestination": "parisFRA",
                                "distance": "200.4",
                                "airline": "EasyJet",
                                "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                            }
    /update:
        post:
            description: Update a Flight Offer
            body:
                application/json:
                    example: |
                        {
                            "id": "e74fc76d-3868-4fdd-9df5-04946f46e44f",
                            "price": "38.99",
                            "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                        }
            responses:
                200:
                    description: Flight Offer Successfully Updated
                    body:
                        application/json:
                            example: |
                                {
                                    "id": "e74fc76d-3868-4fdd-9df5-04946f46e44f",
                                    "price": "38.99",
                                    "flightOrigin": "londonGBR",
                                    "flightDestination": "parisFRA",
                                    "distance": "200.4",
                                    "airline": "EasyJet",
                                    "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                                }
    /cancel:
        post:
            description: Cancel a Flight Offer
            body:
                application/json:
                    example: |
                        {
                            "id": "e74fc76d-3868-4fdd-9df5-04946f46e44f",
                        }
            responses:
                200:
                    description: Flight Offer Cancelled
                404:
                    description: Flight Offer Not Found
                500:
                    description: An error occurred while trying to cancel the Flight Offer
    /find:
        /outbound:
            post:
                description: Find a Flight Offer By FlightOrigin & Date
                body:
                    application/json:
                        example: |
                            {
                                "flightOrigin": "londonGBR",
                                "date": "2016-06-15"
                            }
                responses:
                    200:
                        description: Flight Offers Found Matching Your Criteria
                        body:
                            application/json:
                                example: |
                                [
                                    {
                                        "id": "e74fc76d-3868-4fdd-9df5-04946f46e44f",
                                        "price": "38.99",
                                        "flightOrigin": "londonGBR",
                                        "flightDestination": "parisFRA",
                                        "distance": "200.4",
                                        "airline": "EasyJet",
                                        "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                                    },
                                    {
                                        "id": "a274342d-1324-4e2b-be98-4b75237af28b",
                                        "price": "32.99",
                                        "flightOrigin": "londonGBR",
                                        "flightDestination": "madridESP",
                                        "distance": "450.8",
                                        "airline": "Ryanair",
                                        "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                                    }
                                ]
                    404:
                        description: No flights matching your criteria
        /inbound:
            post:
                description: Find closest Flight Offers by destination & Travel Origin
                body:
                    application/json:
                        example: |
                            {
                                "travel-origin": "londonGBR",
                                "flightDestination": "cairoEGY"
                            }
            responses:
                200:
                    description: Flight Offer Successfully Updated
                    body:
                        application/json:
                            example: |
                                {
                                    "id": "6da70017-20ee-42e4-aa7d-a2228661dbce",
                                    "price": "45.99",
                                    "flightOrigin": "parisFRA",
                                    "flightDestination": "cairoEGY",
                                    "distance": "647.2",
                                    "airline": "EasyJet",
                                    "flightDates": ["2016-06-15","2016-06-22","2016-06-25"]
                                }

